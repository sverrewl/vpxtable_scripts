    Set LeftMagnet = New cvpmMagnet
    With LeftMagnet
        .InitMagnet MagnetL, 20
        .Solenoid = 13
        .GrabCenter = True
        .CreateEvents "LeftMagnet"
    End With

    ' Main Timer init
    PinMAMETimer.Interval = PinMAMEInterval
    PinMAMETimer.Enabled = 1
    RealTime.Enabled = 1

    ' Turn on Gi
     vpmtimer.addtimer 2000, "GiOn '"
