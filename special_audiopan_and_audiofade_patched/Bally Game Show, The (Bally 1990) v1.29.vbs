' Lamp & Flasher Timers

Function ByteToBit(myByte)

    'Bit  ==  32103210
    '         --------
    '&HF0 == "11110000"
    '&H0A == "00001010"

    Dim k
    Dim x

    Dim valofbyte
    Dim mybytetobit

    valofbyte = CInt(myByte)
    mybytetobit = ""

    For k = 0 To 7
        x = 2 ^ k
        If valofbyte And x Then
            mybytetobit = "1" & mybytetobit
        Else
            mybytetobit = "0" & mybytetobit
        End If

    Next

    ByteToBit = mybytetobit

End Function

